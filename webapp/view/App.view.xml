<mvc:View
    controllerName="smartcontrols.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
>
    <App id="app">
        <Page
            id="page"
            title="{i18n>title}"
        >
            <content>
                <smartFilterBar:SmartFilterBar
                    id="SF_TEST"
                    liveMode="false"
                    considerAnalyticalParameters="true"
                    useProvidedNavigationProperties="true"
                    entitySet="SEPMRA_C_PD_Product"
                    persistencyKey="PK_SF_TEST"
                    showClearOnFB="true"
                />
                <smartTable:SmartTable
                    id="ST_TEST"
                    smartFilterId="SF_TEST"
                    fitContainer="true"
                    entitySet="SEPMRA_C_PD_Product"             
                    useVariantManagement="true"
                    showTablePersonalisation="true"
                    enableAutoBinding="true"
                    persistencyKey="PK_ST_TEST"
                    tableType="Table"
                    useExportToExcel="true"
                    width="100%"
                    height="650px"
                    header="Products"
                    showFullScreenButton="true"
                    beforeRebindTable="onBeforeRebind"
                />
            </content>
        </Page>
    </App>
</mvc:View>